<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:component="com.threecoder.callcenter.view.component.*"
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="174" height="100%"
		 fontSize="16">
	<fx:Script>
		<![CDATA[
			import com.threecoder.callcenter.model.vo.TaskTypeItemVO;
			
			import mx.collections.ArrayCollection;
			public function set label( taskLabel :String ) :void {
				typeLabel.text = taskLabel;
			}
			
			public function getSelected() :Array {
				var arr :Array = new Array();
				var productsAC :ArrayCollection = list.dataProvider as ArrayCollection;
				if( !productsAC ) {
					return arr;
				}
				for(var i :uint = 0; i < productsAC.length; ++i) {
					var item :TaskTypeItemVO = productsAC.getItemAt( i ) as TaskTypeItemVO;
					if( item.isSelected ) {
						arr.push( item.taskId );
					}
				}
		
				return arr;
			}
			
			public function set taskTypeList( ac :ArrayCollection ) :void {
				list.dataProvider = ac;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:Label text="检查类：" y="10" id="typeLabel"/>
	<s:TextInput id="textInput" y="6" right="0" width="80"/>
	
	<mx:List id="list" y="40" width="100%" height="100%" labelField="taskName">  
		<mx:itemRenderer>
			<fx:Component>
				<mx:CheckBox selectedField="isSelected"
							 change="onChange(event);">
					<fx:Script>
						<![CDATA[
							private function onChange(evt:Event):void {
								data.isSelected = !data.isSelected;
							}
						]]>
					</fx:Script>
				</mx:CheckBox>
			</fx:Component>
		</mx:itemRenderer>
	</mx:List>
</s:Group>
